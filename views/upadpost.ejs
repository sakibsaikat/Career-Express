<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Center Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="/css/dashboard.css">
</head>

<body>

    <div class="mainContainer d-flex justify-content-start">


    <div class="side-bar" id="side-bar">

      <div class="main-item ms-3 pt-4 d-flex justify-content-start align-items-center">
        <i id="dash-btn" class="fa-solid fa-bars dash-icon"></i>
        <a href="/tdash" class="menu-itemz">
        <p id="def4" class="def text-light ms-3 pt-2 fw-bold">Dashboard</p>
        </a>
    </div>
   
        


        <a href="/admission" class="d-block menu-itemz">
          <div class="items mt-5 d-flex justify-content-start">
              <i class="fa-solid fa-book ms-3"></i>
              <p id="def" class="def">Admission</p>
          </div>
        </a>

        <a href="" class="d-block menu-itemz">
          <div class="items d-flex justify-content-start">
              <i class="fa-regular fa-pen-to-square ms-3"></i>
              <p id="def1" class="def">Training</p>
          </div>
        </a>
        <a href="" class="d-block menu-itemz">
          <div class="items d-flex justify-content-start">
            <i class="fa-solid fa-business-time ms-3"></i>
              <p id="def2" class="def">Job</p>
          </div>
        </a>
        <a href="" class="d-block menu-itemz">
          <div class="items d-flex justify-content-start">
            <i class="fa-brands fa-squarespace ms-3"></i>
              <p id="def3" class="def">Others</p>
          </div>
        </a>






    </div>




    <div id="right-content" class="contents">
        <div class="header">
            <div class="logo d-flex align-items-center">
                <div class="imgs d-flex align-items-center">
                    <img src="/img/online-learning.png" alt="">
                </div>
                <p class="display-6 fs-4 text-muted ms-2">Career Express</p>
            </div>
        </div>
        <div class="content2">



            <div class="tables mt-3">
            <p class="text-muted display-6 fs-3">Admission Posts</p>


                        <form action="/update_admission/<%= data._id %>" method="POST">

                            <div class="form-floating">

                              <input type="text" value="<%= data._id %>" hidden name="Object_Id">
                              <input type="date" id="date" value="<%= data._id %>" name="date" hidden>
                              <input type="text" value="<%= data.image %>" name="img" hidden>
                              <input type="text" value="pending" name="status" hidden>

                                <select class="form-select" name="catagory" id="floatingSelect" aria-label="Floating label select example">
                                  <% let catagories = ["Corporate","IT","Accounts","Business","HRD"]; %>
                                  <% for(let x=0;x<catagories.length;x++){ 
                                    if(catagories[x]==data.catagory){
                                  %>
                                  <option value="<%= catagories[x] %>" selected><%= catagories[x] %></option>
                                  <% }else{ %>
                                    <option value="<%= catagories[x] %>"><%= catagories[x] %></option>
                                  <% } } %>

                                </select>
                                <label for="floatingSelect">Select Catagory</label>
                              </div>

                              <div class="form-floating mt-3">
                                <select class="form-select" name="area" id="floatingSelect" aria-label="Floating label select example">


                                  <% let areas = ["Dhaka","Rajshahi","Khulna","Barisal","Rangpur","Sylhet","Mymensingh","Chattogram"]; %>
                                  <% for(let x=0;x<areas.length;x++){ 
                                    if(areas[x]==data.area){
                                  %>
                                  <option value="<%= areas[x] %>" selected><%= areas[x] %></option>
                                  <% }else{ %>
                                    <option value="<%= areas[x] %>"><%= areas[x] %></option>
                                  <% } } %>
                                </select>
                                <label for="floatingSelect">Select Area</label>
                              </div>

                              <div class="form-floating mt-3 mb-3">
                                <input class="form-control" name="heading" id="floatingTextarea2" value="<%= data.heading %>"></input>
                                <label for="floatingTextarea2">Write your post heading here</label>
                              </div>

                              <div class="form-floating mt-3 mb-3">
                                <textarea class="form-control" name="description" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 200px"><%= data.description %></textarea>
                                <label for="floatingTextarea2">Write your post description here...</label>
                              </div>

                              <div class="mb-3">
                                <label for="formFileSm" class="form-label">Upload Image related with your post (Optional):</label>
                                <input class="form-control form-control-sm" id="formFileSm" type="file" name="image" value="x.txt">
                              </div>
                              <button type="submit" class="btn btn-success text-end">Post</button>
                        </form>




            </div>
        </div>
    </div>
</div>

    <script>
      let dates = document.getElementById("date");
      
      dates.valueAsDate = new Date("<%= data.date %>");
    </script>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="/js/dashboard.js"></script>
    <script src="/js/updatePost.js"></script>
</body>

</html>