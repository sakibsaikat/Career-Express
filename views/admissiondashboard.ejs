<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Center Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link rel="stylesheet" href="css/dashboard.css">
</head>

<body>

    <div class="mainContainer d-flex justify-content-start">


    <div class="side-bar" id="side-bar">

      <div class="main-item ms-3 pt-4 d-flex justify-content-start align-items-center">
        <i id="dash-btn" class="fa-solid fa-bars dash-icon"></i>
        <a href="/tdash" class="menu-itemz">
        <p id="def4" class="def text-light ms-3 pt-2 fw-bold">Dashboard</p>
        </a>
    </div>
   
        


        <a href="/admission" class="d-block menu-itemz">
          <div class="items mt-5 d-flex justify-content-start">
              <i class="fa-solid fa-book ms-3"></i>
              <p id="def" class="def">Admission</p>
          </div>
        </a>

        <a href="/training" class="d-block menu-itemz">
          <div class="items d-flex justify-content-start">
              <i class="fa-regular fa-pen-to-square ms-3"></i>
              <p id="def1" class="def">Training</p>
          </div>
        </a>
        <a href="" class="d-block menu-itemz">
          <div class="items d-flex justify-content-start">
            <i class="fa-solid fa-business-time ms-3"></i>
              <p id="def2" class="def">Job</p>
          </div>
        </a>
        <a href="" class="d-block menu-itemz">
          <div class="items d-flex justify-content-start">
            <i class="fa-brands fa-squarespace ms-3"></i>
              <p id="def3" class="def">Others</p>
          </div>
        </a>






    </div>




    <div id="right-content" class="contents">
        <div class="header">
            <div class="logo d-flex align-items-center">
                <div class="imgs d-flex align-items-center">
                    <img src="img/online-learning.png" alt="">
                </div>
                <p class="display-6 fs-4 text-muted ms-2">Career Express</p>
            </div>
        </div>
        <div class="content2">



            <div class="tables mt-5">
            <p class="text-muted display-6 fs-3">Admission Posts</p>




                        <!-- Button trigger modal -->
            <button type="button" class="btn btn-success btn-sm my-2" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Create Post
            </button>
            
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create Admission Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/sendadpost" method="POST">

                            <div class="form-floating">
                                <select class="form-select" name="catagory" id="floatingSelect" aria-label="Floating label select example">
                                  <option value="Corporate" selected>Corporate</option>
                                  <option value="IT">IT</option>
                                  <option value="Accounts">Accounts</option>
                                  <option value="HRD">HRD</option>
                                </select>
                                <label for="floatingSelect">Select Catagory</label>
                              </div>

                              <div class="form-floating mt-3">
                                <select class="form-select" name="area" id="floatingSelect" aria-label="Floating label select example">
                                  <option selected>Bogura</option>
                                  <option value="Dhaka">Dhaka</option>
                                  <option value="Chattogram">Chattogram</option>
                                  <option value="Khulna">Khulna</option>
                                  <option value="Rajshahi">Rajshahi</option>
                                  <option value="Barisal">Barisal</option>
                                  <option value="Sylhet">Sylhet</option>
                                  <option value="Rangpur">Rangpur</option>
                                  <option value="Mymensingh">Mymensingh</option>
                                </select>
                                <label for="floatingSelect">Select Area</label>
                              </div>

                              <div class="form-floating mt-3 mb-3">
                                <input class="form-control" name="heading" id="floatingTextarea2"></input>
                                <label for="floatingTextarea2">Write your post heading here</label>
                              </div>

                              <div class="form-floating mt-3 mb-3">
                                <textarea class="form-control" name="description" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px"></textarea>
                                <label for="floatingTextarea2">Write your post description here...</label>
                              </div>

                              <div class="mb-3">
                                <label for="formFileSm" class="form-label">Upload Image related with your post (Optional):</label>
                                <input class="form-control form-control-sm" id="formFileSm" type="file" name="image">
                              </div>
                              <button type="submit" class="btn btn-success text-end">Post</button>
                        </form>
                    </div>
                </div>
                </div>
            </div>





                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Catagory</th>
                            <th scope="col">Area</th>
                            <th scope="col">Heading</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>

                          <tr>
                            <% postData.forEach(function(admission){ %>

                            <% let d = admission.date.toISOString(); %>
                            <% let dStr = ""; 
                            for(let x=0;x<10;x++){ 

                                dStr+=d[x]; 
                                } %>
                            

                          
                            <td><%= admission.date %></td>
                            <td><%= admission.catagory %></td>
                            <td><%= admission.area %></td>
                            <td><b><%= admission.heading %></b></td>
                            <td><%= admission.status %></td>
                            <td>
                              <a href="/admission_info/<%= admission._id %>" class="btn btn-success btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                            </td>
                          </tr>

                          <% }) %>
                         
                      
                      
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</div>
 

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="js/dashboard.js"></script>
</body>

</html>